{
	"name": "@acdh-oeaw/commitlint-config",
	"version": "2.0.0",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/acdh-oeaw/commitlint-config"
	},
	"type": "module",
	"main": "./commitlint.config.js",
	"exports": {
		"default": "./commitlint.config.js"
	},
	"files": [
		"./commitlint.config.js"
	],
	"packageManager": "pnpm@9.10.0",
	"scripts": {
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"ci:version": "changeset version && prettier \"**/CHANGELOG.md\" --write",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"validate": "run-p format:check"
	},
	"dependencies": {
		"@commitlint/config-conventional": "^19.5.0"
	},
	"peerDependencies": {
		"@commitlint/cli": "19.x"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.8",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.10",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"simple-git-hooks": "^2.11.1",
		"typescript": "^5.6.2"
	},
	"commitlint": {
		"extends": "./commitlint.config.js"
	},
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
