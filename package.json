{
	"name": "@acdh-oeaw/commitlint-config",
	"version": "2.0.0",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/acdh-oeaw/commitlint-config"
	},
	"type": "module",
	"main": "./commitlint.config.js",
	"exports": {
		"default": "./commitlint.config.js"
	},
	"files": [
		"./commitlint.config.js"
	],
	"packageManager": "pnpm@10.20.0",
	"scripts": {
		"changeset:add": "changeset add",
		"changeset:status": "changeset status --verbose",
		"ci:release": "changeset publish",
		"ci:version": "changeset version && prettier \"**/CHANGELOG.md\" --write",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"prepare": "run-s setup",
		"setup": "is-in-ci || simple-git-hooks",
		"validate": "run-p format:check"
	},
	"dependencies": {
		"@commitlint/config-conventional": "^20.0.0"
	},
	"peerDependencies": {
		"@commitlint/cli": "20.x"
	},
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/types": "^20.0.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3"
	},
	"commitlint": {
		"extends": "./commitlint.config.js"
	},
	"lint-staged": {
		"*": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"commit-msg": "pnpm exec commitlint --edit",
		"pre-commit": "pnpm exec lint-staged",
		"pre-push": "pnpm run validate"
	}
}
